    "@types/firefox-webext-browser": "^143.0.0",
    "@types/webextension-polyfill": "^0.12.4",
    "esbuild": "^0.19.11",
    "prettier": "^3.8.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
